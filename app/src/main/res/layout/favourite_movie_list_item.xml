<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/size_small"
    app:contentPadding="4dp"
    android:layout_margin="@dimen/size_small">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_marginStart="@dimen/size_small"
            android:id="@+id/tv_fav_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            tools:text="@string/movie_title_dummy_text"/>

        <TextView
            android:id="@+id/tv_fav_movie_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_small"
            tools:text="@string/movie_rating_dummy_text" />
    </LinearLayout>


</android.support.v7.widget.CardView>
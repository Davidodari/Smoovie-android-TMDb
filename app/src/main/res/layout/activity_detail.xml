<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="@dimen/size_large"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:textAlignment="gravity"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/backdrop_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/label_content_desc"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movie_title_details_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_default"
                android:layout_marginEnd="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginTop="@dimen/size_medium"
                android:text="@string/label_movie_title_view"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_rate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginTop="@dimen/size_medium"
                android:text="@string/label_rate"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/movie_title_details_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <RatingBar
                android:id="@+id/movie_rating_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:padding="@dimen/size_small"
                android:rating="3.4"
                android:requiresFadingEdge="vertical"
                app:layout_constraintTop_toBottomOf="@id/label_rate_text_view" />

            <TextView
                android:id="@+id/label_overview_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginTop="@dimen/size_medium"
                android:text="@string/label_overview"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_rating_rating_bar" />

            <TextView
                android:id="@+id/movie_overview_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/label_overview_text_view" />

            <TextView
                android:id="@+id/label_release_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginTop="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:text="@string/label_released"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_overview_details_text_view" />

            <TextView
                android:id="@+id/movie_release_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_release_text_view" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
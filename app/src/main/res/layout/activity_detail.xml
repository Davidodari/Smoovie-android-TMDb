<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_app_bar_height"
        android:elevation="@dimen/size_large"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:textAlignment="gravity"
            app:contentScrim="?attr/colorPrimary"

            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/backdrop_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/label_content_desc"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/poster_image_view"
                android:layout_width="@dimen/size_image_view_poster"
                android:layout_height="@dimen/size_width"
                android:contentDescription="@string/label_content_desc"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_movie_text_view"
                android:layout_width="@dimen/size_text_view_height"
                android:layout_height="@dimen/size_text_view_width"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:text="@string/label_movie_title_view"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/poster_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_rating_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_default"
                android:text="@string/label_rate"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintLeft_toRightOf="@id/poster_image_view"
                app:layout_constraintTop_toBottomOf="@id/label_movie_text_view" />

            <RatingBar
                android:id="@+id/movie_rating_rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginTop="@dimen/size_default"
                android:padding="@dimen/size_small"
                android:requiresFadingEdge="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/poster_image_view"
                app:layout_constraintTop_toBottomOf="@id/label_rating_text_view" />


            <TextView
                android:id="@+id/label_rate_text_view_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default_10"
                android:layout_marginTop="@dimen/size_default"
                android:textSize="14sp"
               app:layout_constraintRight_toLeftOf="@id/label_rate_text_view_five"
                app:layout_constraintTop_toBottomOf="@id/movie_rating_rating_bar"

                />

            <TextView
                android:id="@+id/label_rate_text_view_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginTop="@dimen/size_default"
                android:text="@string/label_text_view_rating_total"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintLeft_toRightOf="@id/label_rate_text_view_value"
                app:layout_constraintTop_toBottomOf="@id/movie_rating_rating_bar" />

            <TextView
                android:id="@+id/label_overview_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_default"
                android:text="@string/label_overview"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_image_view" />

            <TextView
                android:id="@+id/movie_overview_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/label_overview_text_view" />

            <TextView
                android:id="@+id/label_release_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_small"
                android:layout_marginStart="@dimen/size_small"
                android:layout_marginTop="@dimen/size_medium"
                android:text="@string/label_released"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_overview_details_text_view" />

            <TextView
                android:id="@+id/movie_release_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_medium"
                android:layout_marginEnd="@dimen/size_default"
                android:layout_marginStart="@dimen/size_default"
                android:layout_marginTop="@dimen/size_medium"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_release_text_view" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>